<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/collapsing_toolbar_height"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.7">

    <ImageView
        android:id="@+id/movie_image_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/collapsing_toolbar_height"
        android:scaleType="centerCrop"
        android:transitionName="@string/transition_string" />

    <ImageView
        android:layout_width="@dimen/video_play_circle_width"
        android:layout_height="@dimen/video_play_circle_width"
        android:layout_centerInParent="true"
        android:background="@drawable/video_play_circle"
        android:scaleType="centerInside"
        android:src="@drawable/video_play" />

    <TextView
        android:id="@+id/rest_rating"
        style="@style/wrap_wrap"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corners"
        android:ellipsize="end"
        android:layout_margin="@dimen/dimen_15"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="4.5"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</RelativeLayout>